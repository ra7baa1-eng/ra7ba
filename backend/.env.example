# Backend Environment Variables - Production Setup

# ===================================
# Database Configuration (Railway PostgreSQL or Supabase)
# ===================================
# احصل على هذه القيم من Railway Dashboard أو Supabase
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ===================================
# JWT Configuration
# ===================================
# استخدم مفاتيح قوية (32+ حرف) - يمكن توليدها من: https://generate-secret.vercel.app
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===================================
# Application Configuration
# ===================================
PORT=10000
NODE_ENV=production
APP_DOMAIN=https://your-frontend.vercel.app
API_URL=https://your-backend.railway.app

# ===================================
# Supabase Integration
# ===================================
# احصل على هذه القيم من: https://supabase.com/dashboard
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_BUCKET="rahba-storage"

# ===================================
# Authentication (Clerk)
# ===================================
# احصل على المفاتيح من: https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY="pk_live_your-clerk-key"
CLERK_SECRET_KEY="sk_live_your-clerk-secret"

# ===================================
# Payment Processing (Stripe)
# ===================================
# احصل على المفاتيح من: https://dashboard.stripe.com
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-secret"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ===================================
# File Upload (ImgBB)
# ===================================
# احصل على مفتاح مجاني من: https://imgbb.com/api
IMGBB_API_KEY="your-imgbb-api-key"

# ===================================
# Email Service (Gmail SMTP)
# ===================================
# استخدم App Password من Google: https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ===================================
# Telegram Notifications (Optional)
# ===================================
# احصل على Bot Token من: https://t.me/BotFather
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_ADMIN_CHAT_ID="your-admin-chat-id"

# ===================================
# CORS Configuration
# ===================================
# أضف domains الخاصة بك
CORS_ORIGINS="https://your-frontend.vercel.app,https://your-custom-domain.com"

# ===================================
# Admin Setup (First Time Only)
# ===================================
ADMIN_EMAIL="admin@rahba.com"
ADMIN_PASSWORD="change-this-secure-password"

# ===================================
# Maintenance Flags
# ===================================
AUTO_MIGRATE_ON_BOOT=true
AUTO_SEED_ON_BOOT=false
MAINTENANCE_CREATE_ADMIN_ON_BOOT=true
MAINTENANCE_FIX_FEATURES_ON_BOOT=false

